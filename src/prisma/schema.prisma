generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Business {
  id        String   @id @default(uuid())
  name      String
  agents    Agent[]
  chats     Conversation[]
  createdAt DateTime @default(now())
}

model Agent {
  id         String   @id @default(uuid())
  name       String
  department String
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  createdAt  DateTime @default(now())
}

model Conversation {
  id         String    @id @default(uuid())
  businessId String
  department String
  status     String
  messages   Message[]
  business   Business  @relation(fields: [businessId], references: [id])
  createdAt  DateTime  @default(now())
}

model Message {
  id             String        @id @default(uuid())
  conversationId String
  sender         String
  content        String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  createdAt      DateTime      @default(now())
}
